<Window x:Class="InjecTech.View.InjectSimView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulador de Injeção Eletrônica" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Sensor RPM" FontWeight="Bold" />
                <Slider x:Name="SliderRPM" Minimum="0" Maximum="8000" TickFrequency="500" IsSnapToTickEnabled="True" />
                <TextBlock Text="{Binding ElementName=SliderRPM, Path=Value, StringFormat='RPM: {0:0}'}" />

                <TextBlock Text="Temperatura do Motor (°C)" FontWeight="Bold" Margin="0,10,0,0"/>
                <Slider x:Name="SliderTemp" Minimum="20" Maximum="120" TickFrequency="10" IsSnapToTickEnabled="True" />
                <TextBlock Text="{Binding ElementName=SliderTemp, Path=Value, StringFormat='Temp: {0:0.0}°C'}" />

                <TextBlock Text="TPS (Posição da Borboleta) %" FontWeight="Bold" Margin="0,10,0,0"/>
                <Slider x:Name="SliderTPS" Minimum="0" Maximum="100" TickFrequency="5" IsSnapToTickEnabled="True" />
                <TextBlock Text="{Binding ElementName=SliderTPS, Path=Value, StringFormat='TPS: {0:0}%'}" />

                <TextBlock Text="Sensor de Oxigênio (Lambda)" FontWeight="Bold" Margin="0,10,0,0"/>
                <Slider x:Name="SliderO2" Minimum="0.8" Maximum="1.2" TickFrequency="0.01" IsSnapToTickEnabled="False" />
                <TextBlock Text="{Binding ElementName=SliderO2, Path=Value, StringFormat='Lambda: {0:0.00}'}" />
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,20,0,0">
                <Button x:Name="BtnProcessar" Content="Processar Injeção" Click="BtnProcessar_Click" Height="40" />

                <TextBlock x:Name="TxtStatus" FontSize="14" FontFamily="Consolas" Margin="0,10,0,0" />
                <TextBlock x:Name="TxtMistura" FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
